<div class="col-12 p-2 bg-light">
    <form action="/json" method="post" enctype="multipart/form-data">
        {{#if input_1}}
            <input name="input_1" type="text" value="{{input_1}}" placeholder="Value 1" class="form-control" />
            <input name="input_2" type="text" value="{{input_2}}" placeholder="Value 1" class="form-control" />
        {{else}}
            <input name="file" accept=".json" type="file" class="form-control" />
        {{/if}}
        <button type="submit" class="btn btn-danger mt-3">Submit</button>
    </form>
</div>